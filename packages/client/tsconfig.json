{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true, // 이건 뭐지?
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@server/*": [
        "../server/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../../@types", "mock/mock_assets/chat_mock.json", "mock/mock_assets/chat_mock.json",
  ],
  "exclude": [
    "./node_modules/**/*",
    "./dist",
    "./__test__/**/*"
  ],
}
